<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="1dp"
    android:elevation="4dp"
    app:cardCornerRadius="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/mallStall_customLayout_ImgView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:scaleType="fitXY"
            android:src="@drawable/dominospizza" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:orientation="vertical">
            <TextView
                android:id="@+id/mallStall_customLayout_stallTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="@string/mallStallTitle"
                android:textSize="15sp"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:orientation="horizontal"
                android:padding="5dp">

                <Button
                    android:id="@+id/mallStall_customLayout_newBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:text="@string/newBtn"
                    android:drawableStart="@drawable/ic_bookmark_border"
                    android:background="@drawable/new_promotion_rounded_corner" android:padding="3dp"
                    android:textSize="13sp"
                    android:textColor="@android:color/holo_orange_light" />

                <Button
                    android:id="@+id/mallStall_customLayout_promotion"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_marginStart="4dp"
                    android:background="@drawable/new_promotion_rounded_corner"
                    android:drawableStart="@drawable/ic_flag"
                    android:text="@string/promotions"
                    android:textColor="@android:color/holo_orange_light"
                    android:textSize="10sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>