<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/menu_textview_custom_layout_ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/toolbar_layout_toolbar"
    android:background="@drawable/menu_textview_bg"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/menu_textView_customLayout_optionMenu"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@color/colorOrange"
        android:padding="8dp"
        android:src="@drawable/ic_more_vert" />

    <TextView
        android:id="@+id/menu_textView_customLayout_Tv"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center"
        android:text="@string/app_name"
        android:textAlignment="center"
        android:textSize="15sp" />
</LinearLayout>