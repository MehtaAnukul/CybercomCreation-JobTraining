<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ProductCustomFragment"
    android:layout_margin="1dp"
    android:elevation="4dp"
    android:padding="4dp"
    app:cardCornerRadius="4dp">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/product_customLayout_productImgView"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="fitXY"
                android:layout_margin="5dp"
                android:src="@drawable/dominospizza" />

            <LinearLayout
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/product_customLayout_productNameTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="@string/productName"
                    android:textSize="16sp"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/product_customLayout_productDescriptionTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="@string/productDescription"
                    android:textSize="14sp"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@color/colorWhite"
            android:orientation="vertical">
            <TextView
                android:id="@+id/product_customLayout_productPriceTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$25.69"
                android:textStyle="bold"
                android:padding="10dp"
                android:layout_marginRight="5dp"
                android:textColor="@android:color/holo_orange_light"
                android:textSize="16sp" />
            <ImageButton
                android:id="@+id/product_customLayout_ImgBtnAdd"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:scaleType="center"
                android:src="@drawable/ic_add"
                android:background="@drawable/plus_btn_bg"/>
        </LinearLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>