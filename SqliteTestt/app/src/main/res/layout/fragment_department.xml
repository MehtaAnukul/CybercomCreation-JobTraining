<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.DepartmentFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true">
            <EditText
                android:id="@+id/fragment_department_idEd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="ID"
                android:visibility="gone"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:textAlignment="center"
                android:layout_marginTop="20dp"/>
            <EditText
                android:id="@+id/fragment_department_nameEd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter your department name"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                />
            <Button
                android:id="@+id/fragment_deparment_addBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:text="Add Deparment"/>

        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>