<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sqlite.fragment.SqliteAddFragment">

    <!-- TODO: Update blank fragment layout -->
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:background="@color/bg_gradient_start">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:layout_centerInParent="true">
           <EditText
               android:id="@+id/fragment_sqlite_idEd"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:hint="@string/id"
               android:visibility="gone"
               android:layout_marginLeft="50dp"
               android:layout_marginRight="50dp"
               android:textAlignment="center"/>
           <EditText
               android:id="@+id/fragment_sqlite_firstNameEd"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:hint="@string/firstName"
               android:textColorHint="@color/white"
               android:textColor="@color/white"
               android:layout_marginLeft="50dp"
               android:layout_marginRight="50dp"
               android:textAlignment="center"/>
           <EditText
               android:id="@+id/fragment_sqlite_lastNameEd"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:hint="@string/lastName"
               android:textColorHint="@color/white"
               android:textColor="@color/white"
               android:layout_marginLeft="50dp"
               android:layout_marginRight="50dp"
               android:textAlignment="center"/>
           <EditText
               android:id="@+id/fragment_sqlite_phoneNumEd"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:hint="@string/phoneNum"
               android:textColorHint="@color/white"
               android:textColor="@color/white"
               android:layout_marginLeft="50dp"
               android:layout_marginRight="50dp"
               android:textAlignment="center"/>
           <EditText
               android:id="@+id/fragment_sqlite_emailEd"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:hint="@string/email"
               android:textColorHint="@color/white"
               android:textColor="@color/white"
               android:layout_marginLeft="50dp"
               android:layout_marginRight="50dp"
               android:textAlignment="center"/>

           <Button
               android:id="@+id/fragment_sqlite_addBtn"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="center"
               android:layout_marginTop="20dp"
               android:background="@drawable/bg"
               android:textColor="@color/white"
               android:text="@string/add" />
       </LinearLayout>
   </RelativeLayout>


</RelativeLayout>