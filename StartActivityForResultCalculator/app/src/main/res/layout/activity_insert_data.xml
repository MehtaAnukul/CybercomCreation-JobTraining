<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InsertDataActivity"
    android:background="@color/colorLight">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:padding="40dp">
        <EditText
            android:id="@+id/activity_insertData_valueOneEd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/valueOne"
            android:textAlignment="center"
            android:layout_weight="1"/>
        <EditText
            android:id="@+id/activity_insertData_valueSecEd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/valueSec"
            android:textAlignment="center"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
        <Button
            android:id="@+id/activity_insertData_okBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ok"
            android:layout_margin="5dp"/>
        <Button
            android:id="@+id/activity_insertData_cancelBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cancel"
            android:layout_margin="5dp"/>
    </LinearLayout>


</RelativeLayout>