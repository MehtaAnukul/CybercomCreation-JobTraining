<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SIGNUP"
                android:textColor="@color/combileColor"
                android:layout_gravity="center"
                android:textSize="20dp">
            </TextView>

            <EditText
                android:id="@+id/signup_fragment_nameEd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Name"
                android:textSize="13dp"
                android:drawableStart="@drawable/ic_person"
                android:drawablePadding="15dp"
                android:inputType="textEmailAddress"
                android:background="@drawable/email_bg"
                android:padding="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="40dp"/>

            <EditText
                android:id="@+id/signup_fragment_emailEd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:drawableStart="@drawable/ic_mail"
                android:drawablePadding="15dp"
                android:textSize="13dp"
                android:inputType="textEmailAddress"
                android:background="@drawable/email_bg"
                android:padding="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                />


            <EditText
                android:id="@+id/signup_fragment_phoneNoEd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Phone Number"
                android:textSize="13dp"
                android:drawableStart="@drawable/ic_phone"
                android:drawablePadding="15dp"
                android:inputType="number"
                android:background="@drawable/email_bg"
                android:padding="20dp"
                android:maxLength="10"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                />
            <EditText
                android:id="@+id/signup_fragment_passwordEd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:textSize="13dp"
                android:drawableStart="@drawable/ic_lock"
                android:drawableEnd="@drawable/ic_eye"
                android:drawablePadding="15dp"
                android:inputType="textPassword"
                android:background="@drawable/email_bg"
                android:padding="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp">
            </EditText>


            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/checkboxTv"
                android:checked="true"
                android:shadowColor="@android:color/holo_orange_dark"
                android:textColor="@color/combileColor"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="20dp"/>

            <Button
                android:id="@+id/signup_fragment_signupBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SIGNUP"
                android:textSize="16dp"
                android:textColor="@color/colorwhite"
                android:background="@drawable/login_btn"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="50dp"
                android:padding="20dp">
            </Button>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/signup_fragment_alreadyTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Already have an Account ?"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="50dp"
                    android:textSize="16dp"
                    android:layout_centerInParent="true">
                </TextView>

                <TextView
                    android:id="@+id/signup_fragment_loginTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LOGIN"
                    android:textColor="@color/combileColor"
                    android:layout_toRightOf="@id/signup_fragment_alreadyTv"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="25dp"
                    android:textSize="16dp">

                </TextView>

            </RelativeLayout>


        </LinearLayout>


    </RelativeLayout>

</FrameLayout>