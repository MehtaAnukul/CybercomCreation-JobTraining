<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="3dp"
    android:layout_marginRight="3dp"
    android:layout_marginTop="1dp"
    android:layout_marginBottom="1dp"
    android:elevation="1dp"
    app:cardCornerRadius="5dp"
    app:cardPreventCornerOverlap="true">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">
        <TextView
            android:id="@+id/custom_layout_idTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:text="id"
            android:layout_margin="2dp"/>
        <TextView
            android:id="@+id/custom_layout_empNameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name of Employee"
            android:layout_marginLeft="15dp"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:id="@+id/custom_layout_empdepartmentTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name of the Depaertment"
                android:layout_margin="5dp"/>
            <Button
                android:id="@+id/custom_layout_editBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Edit"
                android:layout_margin="5dp"/>
            <Button
                android:id="@+id/custom_layout_deleteBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Delete"
                android:layout_margin="5dp"/>



        </LinearLayout>
    </LinearLayout>


</androidx.cardview.widget.CardView>