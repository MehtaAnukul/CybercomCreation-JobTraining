<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gradient_start"
    tools:context=".LoginActivity">

    <LinearLayout
        android:id="@+id/activity_login_main_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/activity_login_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="sans-serif-condensed"
            android:text="@string/welcome"
            android:textColor="@color/white"
            android:textSize="40dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:weightSum="2">

            <EditText
                android:id="@+id/activity_login_id_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/activity_login_tv"
                android:layout_centerInParent="true"
                android:layout_weight="1"
                android:background="@color/white"
                android:hint="@string/id"
                android:padding="5dp"
                android:textAlignment="center" />

            <EditText
                android:id="@+id/activity_login_password_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/activity_login_id_et"
                android:layout_centerInParent="true"
                android:layout_weight="1"
                android:background="@color/white"
                android:hint="@string/password"
                android:inputType="textPassword"
                android:padding="5dp"
                android:textAlignment="center" />

        </LinearLayout>

        <Button
            android:id="@+id/activity_login_loginbtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/activity_login_password_et"
            android:layout_marginTop="30dp"
            android:background="@color/bg_gradient_end"
            android:text="@string/loginbtn"
            android:textColor="@color/white" />

    </LinearLayout>

    <TextView
        android:id="@+id/activity_login_signup_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_login_main_linearlayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="@string/signUp"
        android:textColor="@color/white" />


</RelativeLayout>