<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateProfileActivity">

    <LinearLayout
        android:id="@+id/activity_signup_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/activity_updateProfile_icon"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:src="@drawable/abc"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:weightSum="3">

            <EditText
                android:id="@+id/activity_updateProfile_firstNameEd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_weight="1"
                android:background="@color/white"
                android:hint="@string/firstName"
                android:inputType="textPersonName"
                android:padding="5dp"
                android:textAlignment="center" />
            <EditText
                android:id="@+id/activity_updateProfile_lastNameEd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_weight="1"
                android:background="@color/white"
                android:hint="@string/lastName"
                android:inputType="textPersonName"
                android:padding="5dp"
                android:textAlignment="center" />

            <EditText
                android:id="@+id/activity_updateProfile_emailEd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_weight="1"
                android:background="@color/white"
                android:hint="@string/id"
                android:inputType="textEmailAddress"
                android:padding="5dp"
                android:textAlignment="center" />

            <EditText
                android:id="@+id/activity_updateProfile_phoneNoEd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_weight="1"
                android:background="@color/white"
                android:hint="@string/phoneNo"
                android:inputType="number"
                android:padding="5dp"
                android:textAlignment="center" />

            <EditText
                android:id="@+id/activity_updateProfile_addressEd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_weight="1"
                android:background="@color/white"
                android:hint="@string/address"
                android:inputType="text"
                android:padding="5dp"
                android:textAlignment="center" />

            <Button
                android:id="@+id/activity_updateProfile_updateBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@color/bg_gradient_end"
                android:text="@string/update"
                android:textAlignment="center"
                android:textColor="@color/white" />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>